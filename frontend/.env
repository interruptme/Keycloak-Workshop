# Auth Provider - Set to use OIDC implementation
VITE_AUTH_PROVIDER=oidc

# Keep Keycloak configuration for reference
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=demo-realm
VITE_KEYCLOAK_CLIENT_ID=frontend-client

# OIDC Configuration (using Keycloak as the identity provider)
VITE_OIDC_AUTHORITY=http://localhost:8080/realms/demo-realm
VITE_OIDC_CLIENT_ID=frontend-client
VITE_OIDC_REDIRECT_URI=http://localhost:5173/callback
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5173

# Backend API URL
VITE_WEATHER_API_URL=http://localhost:5000/